@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Attendance Management System - Track and manage student attendance efficiently" />
    <meta name="theme-color" content="#0f172a" />
    <title>@ViewData["Title"] - AttendanceEase</title>

    <!-- Google Fonts - Professional Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>


    <!-- SIDEBAR NAVIGATION -->
    <nav class="sidebar" role="navigation" aria-label="Main navigation">
        @{
            var user = await UserManager.GetUserAsync(User);
            var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
            bool isAdmin = roles.Contains("Admin");
            bool isTeacher = roles.Contains("Teacher");
            bool isStudent = roles.Contains("Student");
        }

        <div class="brand">
            <i class="bi bi-journal-check"></i>
            <span>AttendanceEase</span>
        </div>

        <!-- Main Dashboard -->
        <div class="nav-section">
            @{
                var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
                var isDashboardActive = currentController == "Dashboard" || 
                                      (currentController == "Home" && currentAction == "Index") ||
                                      (currentAction != null && currentAction.Contains("Dashboard"));
            }
            
            <a asp-area="" asp-controller="Dashboard" asp-action="Index" 
               class="nav-link @(isDashboardActive ? "active" : "")" 
               aria-current="@(isDashboardActive ? "page" : "false")">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </div>

        <hr />

        <!-- Academic Management -->
        @if (!isStudent){
        <div class="nav-section">
            <small class="nav-header">Academic Management</small>
            @if (isAdmin)
{
            <a asp-area="" asp-controller="Batches" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Batches" ? "active" : "")">
                <i class="bi bi-folder2-open"></i>
                <span>Batches</span>
            </a>

            <a asp-area="" asp-controller="Sections" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Sections" ? "active" : "")">
                <i class="bi bi-layout-split"></i>
                <span>Sections</span>
            </a>
}

            <a asp-area="" asp-controller="Courses" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Courses" ? "active" : "")">
                <i class="bi bi-book-half"></i>
                <span>Courses</span>
            </a>

            <a asp-area="" asp-controller="TimeTables" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TimeTables" ? "active" : "")">
                <i class="bi bi-calendar-week"></i>
                <span>Timetables</span>
            </a>
        </div>

        <hr />
        }
        @if (!isStudent)
        {
            <!-- People Management -->
            <div class="nav-section">
                <small class="nav-header">People Management</small>
                @if (isAdmin)
                {

                    <a asp-area="" asp-controller="Teachers" asp-action="Index" 
                    class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Teachers" ? "active" : "")">
                        <i class="bi bi-person-badge-fill"></i>
                        <span>Teachers</span>
                    </a>
                }

                <a asp-area="" asp-controller="Students" asp-action="Index" 
                class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Students" ? "active" : "")">
                    <i class="bi bi-people-fill"></i>
                    <span>Students</span>
                </a>
            </div>

            <hr />

            <!-- Attendance & Reports -->
            <div class="nav-section">
                <small class="nav-header">Attendance</small>

                <a asp-area="" asp-controller="Attendance" asp-action="Index" 
                class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendance" ? "active" : "")">
                    <i class="bi bi-calendar-check"></i>
                    <span>Attendance</span>
                </a>

                @* <a asp-area="" asp-controller="Reports" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
                <i class="bi bi-bar-chart-fill"></i>
                <span>Reports</span>
            </a> *@
            </div>

            <hr />
        }

        <!-- Account & Settings -->
        <div class="nav-section">
            <small class="nav-header">Account & Settings</small>
            
            <a asp-area="" asp-controller="Settings" asp-action="Index" 
               class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")">
                <i class="bi bi-gear-fill"></i>
                <span>Settings</span>
            </a>

            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link">
                <i class="bi bi-person-circle"></i>
                <span>Profile</span>
            </a>

            <!-- Hidden logout form -->
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-none">
                @Html.AntiForgeryToken()
            </form>

            <!-- Logout link -->
            <a href="javascript:void(0);" class="nav-link" onclick="document.getElementById('logoutForm').submit();">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>

        @* <hr /> *@

        @* <partial name="_LoginPartial" /> *@
    </nav>

    <!-- TOP NAVIGATION BAR -->
    <header class="topbar" role="banner">
        <div class="page-title">
            @ViewData["Title"]
        </div>
        @* <div class="user-actions">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-secondary btn-sm" aria-label="Account Settings">
                <i class="bi bi-person-circle"></i>
                <span>My Account</span>
            </a>
        </div> *@
    </header>

    <!-- MAIN CONTENT AREA -->
    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer role="contentinfo">
        <div>
            &copy; @DateTime.Now.Year AttendanceEase &bull; Attendance Management System &bull; All Rights Reserved
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
