@model AttendanceManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Teacher Details
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">
                                <h5>@Model.Name</h5>
                            </dd>
                            
                            <dt class="col-sm-4">Employee ID:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.EmployeeId))
                                {
                                    <span class="badge bg-info" style="font-size: 1rem;">@Model.EmployeeId</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>
                            
                            <dt class="col-sm-4">Phone Number:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Department:</dt>
                            <dd class="col-sm-8">
                                @(Model.Department ?? "Not assigned")
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
