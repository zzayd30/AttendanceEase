@model AttendanceManagementSystem.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Course Details
                </h4>
            </div>
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-3">Course Code:</dt>
                    <dd class="col-sm-9">
                        <h5><span class="badge bg-primary">@Model.CourseCode</span></h5>
                    </dd>
                    
                    <dt class="col-sm-3">Course Name:</dt>
                    <dd class="col-sm-9">
                        <h4>@Model.CourseName</h4>
                    </dd>
                    
                    <dt class="col-sm-3">Credit Hours:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info" style="font-size: 1rem;">@Model.CreditHours hours</span>
                    </dd>
                    
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p>@Model.Description</p>
                        }
                        else
                        {
                            <em class="text-muted">No description available</em>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
