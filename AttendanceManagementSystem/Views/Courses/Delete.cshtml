@model AttendanceManagementSystem.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Delete Course
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this course? This action cannot be undone.
                </div>

                <h5 class="mb-3">Course Details:</h5>
                <dl class="row">
                    <dt class="col-sm-4">Course Code:</dt>
                    <dd class="col-sm-8"><strong>@Model.CourseCode</strong></dd>
                    
                    <dt class="col-sm-4">Course Name:</dt>
                    <dd class="col-sm-8">@Model.CourseName</dd>
                    
                    <dt class="col-sm-4">Credit Hours:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.CreditHours hours</span>
                    </dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
