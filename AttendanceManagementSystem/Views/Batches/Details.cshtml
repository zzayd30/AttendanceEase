@model AttendanceManagementSystem.Models.Batch

@{
    ViewData["Title"] = "Batch Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Batch Details
                </h4>
            </div>
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-3">Batch Name:</dt>
                    <dd class="col-sm-9">
                        <h5>@Model.Name</h5>
                    </dd>
                    
                    <dt class="col-sm-3">Total Sections:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@(Model.Sections?.Count ?? 0) Sections</span>
                    </dd>
                </dl>

                @if (Model.Sections?.Any() == true)
                {
                    <hr class="my-4" />
                    <h5 class="mb-3">
                        <i class="bi bi-layout-split me-2"></i>
                        Sections in this Batch
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Section Name</th>
                                    <th>Total Students</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Sections)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <span class="badge bg-success">
                                                @(item.Students?.Count ?? 0) Students
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        No sections created for this batch yet.
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-controller="Sections" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i> Add Section
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
