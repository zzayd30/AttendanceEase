@{
    ViewData["Title"] = "Course Attendance Report";
    var reportData = ViewBag.ReportData as dynamic;
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-book-half me-2"></i>
                    Course Attendance Report
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="CourseAttendance" method="get">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Course</label>
                            <select name="courseId" class="form-select" required>
                                <option value="">-- Select Course --</option>
                                @if (ViewBag.Courses != null)
                                {
                                    @foreach (var course in ViewBag.Courses)
                                    {
                                        <option value="@course.Value" selected="@(course.Value == ViewBag.SelectedCourseId?.ToString())">
                                            @course.Text
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">From Date</label>
                            <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">To Date</label>
                            <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-1"></i> Generate
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (reportData != null)
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h5>@reportData.CourseName</h5>
                            <p class="text-muted mb-0">
                                <strong>Course Code:</strong> @reportData.CourseCode<br />
                                <strong>Period:</strong> @reportData.FromDate.ToString("MMM dd, yyyy") to @reportData.ToDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("GeneratePDF", new { courseId = ViewBag.SelectedCourseId, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })" 
                               class="btn btn-danger">
                                <i class="bi bi-file-pdf me-1"></i> Download PDF
                            </a>
                        </div>
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h2 class="text-primary">@reportData.TotalClasses</h2>
                                    <p class="mb-0">Total Classes</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h2>@reportData.PresentCount</h2>
                                    <p class="mb-0">Present (@reportData.PresentPercentage.ToString("F1")%)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h2>@reportData.AbsentCount</h2>
                                    <p class="mb-0">Absent (@reportData.AbsentPercentage.ToString("F1")%)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h2>@reportData.LateCount</h2>
                                    <p class="mb-0">Late (@reportData.LatePercentage.ToString("F1")%)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Student-wise Attendance -->
                    @if (reportData.StudentData != null && reportData.StudentData.Count > 0)
                    {
                        <h5 class="mb-3">Student-wise Attendance</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Roll No</th>
                                        <th>Student Name</th>
                                        <th>Present</th>
                                        <th>Absent</th>
                                        <th>Late</th>
                                        <th>Attendance %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in reportData.StudentData)
                                    {
                                        var percentage = student.AttendancePercentage;
                                        var badgeClass = percentage >= 75 ? "bg-success" : (percentage >= 50 ? "bg-warning" : "bg-danger");
                                        
                                        <tr>
                                            <td>@student.RollNumber</td>
                                            <td>@student.StudentName</td>
                                            <td><span class="badge bg-success">@student.PresentCount</span></td>
                                            <td><span class="badge bg-danger">@student.AbsentCount</span></td>
                                            <td><span class="badge bg-warning">@student.LateCount</span></td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar @badgeClass" 
                                                         role="progressbar" 
                                                         style="width: @(percentage)%"
                                                         aria-valuenow="@percentage" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        @percentage.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Select a course and date range to generate the report.
            </div>
        }

        <div class="text-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Reports
            </a>
        </div>
    </div>
</div>
