@{
    ViewData["Title"] = "Reports";
}

<h2 class="mb-4">
    <i class="bi bi-file-earmark-bar-graph text-primary me-2"></i>
    Attendance Reports
</h2>

<div class="row">
    <!-- Course Attendance Report -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-book-half text-primary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Course Attendance Report</h4>
                <p class="text-muted mb-4">
                    View attendance statistics for a specific course including present, absent, and late percentages.
                </p>
                <a asp-action="CourseAttendance" class="btn btn-primary btn-lg">
                    <i class="bi bi-search me-2"></i>
                    Generate Course Report
                </a>
            </div>
        </div>
    </div>

    <!-- Student Attendance Report -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-person-badge text-success" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Student Attendance Report</h4>
                <p class="text-muted mb-4">
                    View detailed attendance records for an individual student across all courses.
                </p>
                <a asp-action="StudentAttendance" class="btn btn-success btn-lg">
                    <i class="bi bi-search me-2"></i>
                    Generate Student Report
                </a>
            </div>
        </div>
    </div>

    <!-- Section Report -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-people-fill text-info" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Section Report</h4>
                <p class="text-muted mb-4">
                    View attendance overview for all students in a specific section.
                </p>
                <a asp-controller="Sections" asp-action="Index" class="btn btn-info btn-lg">
                    <i class="bi bi-search me-2"></i>
                    View Sections
                </a>
            </div>
        </div>
    </div>

    <!-- Monthly Report -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-calendar-month text-warning" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Monthly Report</h4>
                <p class="text-muted mb-4">
                    View attendance statistics and trends for the current month.
                </p>
                <a asp-controller="Dashboard" asp-action="AdminDashboard" class="btn btn-warning btn-lg">
                    <i class="bi bi-graph-up me-2"></i>
                    View Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    About Reports
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-check-circle text-success me-2"></i>Features:</h6>
                        <ul>
                            <li>Real-time attendance statistics</li>
                            <li>Exportable PDF reports</li>
                            <li>Detailed analytics</li>
                            <li>Custom date ranges</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-lightbulb text-warning me-2"></i>Tips:</h6>
                        <ul>
                            <li>Select specific date ranges for accurate reports</li>
                            <li>Download reports for record keeping</li>
                            <li>Compare attendance across different periods</li>
                            <li>Use filters to find specific information</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
