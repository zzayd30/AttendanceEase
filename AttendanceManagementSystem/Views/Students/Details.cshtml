@model AttendanceManagementSystem.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Student Details
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">
                                <h5>@Model.Name</h5>
                            </dd>
                            
                            <dt class="col-sm-4">Roll Number:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary" style="font-size: 1rem;">@Model.RollNumber</span>
                            </dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>
                            
                            <dt class="col-sm-4">Phone Number:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Section:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Section != null)
                                {
                                    <span class="badge bg-info" style="font-size: 1rem;">
                                        @Model.Section.Batch?.Name - @Model.Section.Name
                                    </span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <a asp-controller="Attendance" asp-action="ViewStudent" asp-route-studentId="@Model.Id" class="btn btn-success me-2">
                                <i class="bi bi-calendar-check me-1"></i> View Attendance
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
