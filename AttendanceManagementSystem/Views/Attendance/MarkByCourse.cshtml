@model AttendanceManagementSystem.ViewModels.AttendanceViewModel
@using AttendanceManagementSystem.Models

@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-check2-square me-2"></i>
                    Mark Attendance
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <strong>Course:</strong> @Model.CourseName
                    </div>
                    <div class="col-md-4">
                        <strong>Section:</strong> @Model.SectionName
                    </div>
                    <div class="col-md-4">
                        <strong>Date:</strong> @Model.Date.ToString("MMMM dd, yyyy")
                    </div>
                </div>

                <form asp-action="MarkByCourse" method="post">
                    <input type="hidden" asp-for="CourseId" />
                    <input type="hidden" asp-for="SectionId" />
                    <input type="hidden" asp-for="Date" />

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Roll No</th>
                                    <th>Student Name</th>
                                    <th>Status</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Students.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" asp-for="Students[i].StudentId" />
                                            <input type="hidden" asp-for="Students[i].RollNumber" />
                                            <input type="hidden" asp-for="Students[i].StudentName" />
                                            @Model.Students[i].RollNumber
                                        </td>
                                        <td>@Model.Students[i].StudentName</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <input type="radio" 
                                                       class="btn-check" 
                                                       name="Students[@i].Status" 
                                                       id="present_@i" 
                                                       value="@AttendanceStatus.Present" 
                                                       checked="@(Model.Students[i].Status == AttendanceStatus.Present)" />
                                                <label class="btn btn-outline-success btn-sm" for="present_@i">
                                                    <i class="bi bi-check-circle"></i> Present
                                                </label>

                                                <input type="radio" 
                                                       class="btn-check" 
                                                       name="Students[@i].Status" 
                                                       id="absent_@i" 
                                                       value="@AttendanceStatus.Absent"
                                                       checked="@(Model.Students[i].Status == AttendanceStatus.Absent)" />
                                                <label class="btn btn-outline-danger btn-sm" for="absent_@i">
                                                    <i class="bi bi-x-circle"></i> Absent
                                                </label>

                                                <input type="radio" 
                                                       class="btn-check" 
                                                       name="Students[@i].Status" 
                                                       id="late_@i" 
                                                       value="@AttendanceStatus.Late"
                                                       checked="@(Model.Students[i].Status == AttendanceStatus.Late)" />
                                                <label class="btn btn-outline-warning btn-sm" for="late_@i">
                                                    <i class="bi bi-clock"></i> Late
                                                </label>

                                                <input type="radio" 
                                                       class="btn-check" 
                                                       name="Students[@i].Status" 
                                                       id="excused_@i" 
                                                       value="@AttendanceStatus.Excused"
                                                       checked="@(Model.Students[i].Status == AttendanceStatus.Excused)" />
                                                <label class="btn btn-outline-info btn-sm" for="excused_@i">
                                                    <i class="bi bi-info-circle"></i> Excused
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <input asp-for="Students[i].Remarks" class="form-control form-control-sm" placeholder="Optional" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Students.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            No students found in this section.
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Mark" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        @if (Model.Students.Any())
                        {
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save me-1"></i> Save Attendance
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Quick select all
        $(document).ready(function() {
            $('#selectAllPresent').click(function() {
                $('input[type="radio"][value="Present"]').prop('checked', true);
            });
        });
    </script>
}
