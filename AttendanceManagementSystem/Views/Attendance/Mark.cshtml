@{
    ViewData["Title"] = "Mark Attendance";
    var todayClasses = ViewBag.TodayClasses as List<AttendanceManagementSystem.Models.TimeTable>;
}

<h2 class="mb-4">
    <i class="bi bi-check2-square text-primary me-2"></i>
    Mark Attendance
</h2>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Select Class to Mark Attendance</h5>
            </div>
            <div class="card-body p-4">
                @if (User.IsInRole("Teacher") && todayClasses != null && todayClasses.Any())
                {
                    <h6 class="mb-3">Today's Classes (@DateTime.Now.DayOfWeek)</h6>
                    <div class="list-group">
                        @foreach (var classItem in todayClasses)
                        {
                            <a asp-action="MarkByCourse" 
                               asp-route-courseId="@classItem.CourseId" 
                               asp-route-sectionId="@classItem.SectionId"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@classItem.Course?.CourseName</h5>
                                    <small>@classItem.StartTime.ToString(@"hh\:mm") - @classItem.EndTime.ToString(@"hh\:mm")</small>
                                </div>
                                <p class="mb-1">Section: @classItem.Section?.Name</p>
                                <small>Room: @(string.IsNullOrEmpty(classItem.RoomNumber) ? "N/A" : classItem.RoomNumber)</small>
                            </a>
                        }
                    </div>
                }
                else if (User.IsInRole("Admin"))
                {
                    <form asp-action="MarkByCourse" method="get">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Course</label>
                                <select name="courseId" class="form-select" required>
                                    <option value="">-- Select Course --</option>
                                    @if (ViewBag.Courses != null)
                                    {
                                        @foreach (var item in ViewBag.Courses)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Section</label>
                                <select name="sectionId" class="form-select" required>
                                    <option value="">-- Select Section --</option>
                                    @if (ViewBag.Sections != null)
                                    {
                                        @foreach (var item in ViewBag.Sections)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" name="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-arrow-right-circle me-1"></i> Continue
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No classes scheduled for today.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
