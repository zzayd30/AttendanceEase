@model IEnumerable<AttendanceManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Records";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-calendar-check text-primary me-2"></i>
        Attendance Records
    </h2>
    <a asp-action="Mark" class="btn btn-primary">
        <i class="bi bi-check2-square me-1"></i> Mark Attendance
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Section</th>
                            <th>Status</th>
                            <th>Teacher</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attendance in Model)
                        {
                            <tr>
                                <td>@attendance.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <strong>@attendance.Student?.Name</strong>
                                    <br />
                                    <small class="text-muted">@attendance.Student?.RollNumber</small>
                                </td>
                                <td>@attendance.Course?.CourseName</td>
                                <td>@attendance.Section?.Name</td>
                                <td>
                                    @switch (attendance.Status)
                                    {
                                        case AttendanceManagementSystem.Models.AttendanceStatus.Present:
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Present
                                            </span>
                                            break;
                                        case AttendanceManagementSystem.Models.AttendanceStatus.Absent:
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Absent
                                            </span>
                                            break;
                                        case AttendanceManagementSystem.Models.AttendanceStatus.Late:
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> Late
                                            </span>
                                            break;
                                        case AttendanceManagementSystem.Models.AttendanceStatus.Excused:
                                            <span class="badge bg-info">
                                                <i class="bi bi-info-circle"></i> Excused
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>@attendance.Teacher?.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3 mb-0">No attendance records found.</p>
                <a asp-action="Mark" class="btn btn-primary mt-3">
                    <i class="bi bi-check2-square me-1"></i> Mark Attendance
                </a>
            </div>
        }
    </div>
</div>
