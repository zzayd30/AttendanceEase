@using AttendanceManagementSystem.Models
@{
    ViewData["Title"] = "Student Attendance";
    var student = ViewBag.Student as Student;
    var attendanceRecords = ViewBag.AttendanceRecords as List<Attendance>;
    var attendanceStats = ViewBag.AttendanceStats as IEnumerable<dynamic>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-calendar-check text-primary me-2"></i>
        @if (User.IsInRole("Admin"))
        {
            <span>Student Attendance - @student?.Name</span>
        }
        else
        {
            <span>My Attendance Records</span>
        }
    </h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Students" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Students
        </a>
    }
</div>

<!-- Student Info -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-1">@student?.Name</h5>
                <p class="mb-0 text-muted">
                    <strong>Roll Number:</strong> 
                    <span class="badge bg-primary me-3">@student?.RollNumber</span>
                    <strong>Section:</strong> 
                    <span class="badge bg-info">@student?.Section?.Batch?.Name - @student?.Section?.Name</span>
                </p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-controller="Reports" asp-action="StudentAttendance" asp-route-studentId="@student?.Id" class="btn btn-primary">
                    <i class="bi bi-file-earmark-pdf me-1"></i> Generate Report
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Course-wise Statistics -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="bi bi-bar-chart text-info me-2"></i>
            Course-wise Attendance Statistics
        </h5>
    </div>
    <div class="card-body">
        @if (attendanceStats != null && attendanceStats.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Course</th>
                            <th>Total Classes</th>
                            <th>Present</th>
                            <th>Absent</th>
                            <th>Late</th>
                            <th>Attendance Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stat in attendanceStats)
                        {
                            var percentage = stat.Percentage;
                            var badgeClass = percentage >= 75 ? "bg-success" : (percentage >= 50 ? "bg-warning" : "bg-danger");
                            
                            <tr>
                                <td><strong>@stat.CourseName</strong></td>
                                <td>
                                    <span class="badge bg-light text-dark">@stat.TotalClasses</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@stat.PresentCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-danger">@stat.AbsentCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@stat.LateCount</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 25px;">
                                            <div class="progress-bar @badgeClass" 
                                                 role="progressbar" 
                                                 style="width: @(percentage)%"
                                                 aria-valuenow="@percentage" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @percentage.ToString("F1")%
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2" style="font-size: 1.2rem;"></i>
                No attendance statistics available for this student yet.
            </div>
        }
    </div>
</div>

<!-- Recent Attendance Records -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0">
            <i class="bi bi-clock-history text-primary me-2"></i>
            Recent Attendance Records
        </h5>
    </div>
    <div class="card-body">
        @if (attendanceRecords != null && attendanceRecords.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Course</th>
                            <th>Teacher</th>
                            <th>Status</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in attendanceRecords.Take(20))
                        {
                            <tr>
                                <td>
                                    <strong>@record.Date.ToString("MMM dd, yyyy")</strong>
                                    <br />
                                    <small class="text-muted">@record.Date.ToString("dddd")</small>
                                </td>
                                <td>
                                    <strong>@record.Course?.CourseName</strong>
                                    <br />
                                    <small class="text-muted">@record.Course?.CourseCode</small>
                                </td>
                                <td>
                                    @if (record.Teacher != null && !string.IsNullOrEmpty(record.Teacher.Name))
                                    {
                                        <span class="fw-medium">@record.Teacher.Name</span>
                                        @if (!string.IsNullOrEmpty(record.Teacher.EmployeeId))
                                        {
                                            <br />
                                            <small class="text-muted">ID: @record.Teacher.EmployeeId</small>
                                        }
                                    }
                                    else if (record.TeacherId.HasValue)
                                    {
                                        <span class="text-warning">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Teacher ID: @record.TeacherId
                                        </span>
                                        <br />
                                        <small class="text-muted">Teacher data not found</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-person-x me-1"></i>
                                            Not assigned
                                        </span>
                                    }
                                </td>
                                <td>
                                    @switch (record.Status)
                                    {
                                        case AttendanceStatus.Present:
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Present
                                            </span>
                                            break;
                                        case AttendanceStatus.Absent:
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Absent
                                            </span>
                                            break;
                                        case AttendanceStatus.Late:
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> Late
                                            </span>
                                            break;
                                        case AttendanceStatus.Excused:
                                            <span class="badge bg-info">
                                                <i class="bi bi-info-circle"></i> Excused
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(record.Remarks))
                                    {
                                        <span>@record.Remarks</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (attendanceRecords.Count > 20)
            {
                <div class="text-center mt-3">
                    <small class="text-muted">Showing latest 20 records out of @attendanceRecords.Count total records.</small>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2" style="font-size: 1.2rem;"></i>
                No attendance records found for this student.
                
                @if (User.IsInRole("Admin"))
                {
                    <br />
                    <small class="text-muted mt-2">
                        Attendance records will appear here once teachers start marking attendance for this student's classes.
                    </small>
                }
            </div>
        }
    </div>
</div>
