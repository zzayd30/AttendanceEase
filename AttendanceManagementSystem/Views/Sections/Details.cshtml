@model AttendanceManagementSystem.Models.Section

@{
    ViewData["Title"] = "Section Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Section Details
                </h4>
            </div>
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-3">Section Name:</dt>
                    <dd class="col-sm-9">
                        <h5>@Model.Name</h5>
                    </dd>
                    
                    <dt class="col-sm-3">Batch:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary" style="font-size: 1rem;">@Model.Batch?.Name</span>
                    </dd>
                    
                    <dt class="col-sm-3">Total Students:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-success" style="font-size: 1rem;">@(Model.Students?.Count ?? 0) Students</span>
                    </dd>
                </dl>

                @if (Model.Students?.Any() == true)
                {
                    <hr class="my-4" />
                    <h5 class="mb-3">
                        <i class="bi bi-people-fill me-2"></i>
                        Students in this Section
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Roll Number</th>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td><strong>@student.RollNumber</strong></td>
                                        <td>@student.Name</td>
                                        <td>@student.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        No students enrolled in this section yet.
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-controller="Students" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i> Add Student
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
