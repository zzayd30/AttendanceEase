@model AttendanceManagementSystem.Models.Section

@{
    ViewData["Title"] = "Delete Section";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Delete Section
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this section? This action cannot be undone.
                </div>

                <h5 class="mb-3">Section Details:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Section Name:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
                    
                    <dt class="col-sm-3">Batch:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">@Model.Batch?.Name</span>
                    </dd>
                    
                    <dt class="col-sm-3">Total Students:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-success">@(Model.Students?.Count ?? 0) Students</span>
                    </dd>
                </dl>

                @if (Model.Students?.Any() == true)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-info-circle me-2"></i>
                        This section has <strong>@Model.Students.Count student(s)</strong>. Deleting this section may affect related data.
                    </div>
                }

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
