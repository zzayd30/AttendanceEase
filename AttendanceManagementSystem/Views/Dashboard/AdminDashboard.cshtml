@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row g-4 mb-4">
    <!-- Statistics Cards -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Students</h6>
                        <h2 class="mb-0">@ViewBag.TotalStudents</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="bi bi-person-badge-fill text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Teachers</h6>
                        <h2 class="mb-0">@ViewBag.TotalTeachers</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                            <i class="bi bi-book-half text-info" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Courses</h6>
                        <h2 class="mb-0">@ViewBag.TotalCourses</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                            <i class="bi bi-calendar-check text-warning" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Today's Attendance</h6>
                        <h2 class="mb-0">@ViewBag.TodayAttendance</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning-fill text-warning me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3 col-sm-6">
                        <a asp-controller="Batches" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Batch
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a asp-controller="Sections" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Section
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a asp-controller="Students" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Student
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a asp-controller="Teachers" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Teacher
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <a asp-controller="Courses" asp-action="Create" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Course
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <a asp-controller="TimeTables" asp-action="Create" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-plus-circle me-2"></i>
                            Add Timetable
                        </a>
                    </div>
                    @* <div class="col-md-3 col-sm-6">
                        <a asp-controller="Attendance" asp-action="Mark" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-check2-circle me-2"></i>
                            Mark Attendance
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-file-earmark-bar-graph me-2"></i>
                            View Reports
                        </a>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Information -->
<div class="row g-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle-fill text-primary me-2"></i>
                    System Information
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <td><i class="bi bi-folder2 text-primary me-2"></i> Total Batches:</td>
                                <td class="text-end fw-semibold">@ViewBag.TotalBatches</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-layout-split text-success me-2"></i> Total Sections:</td>
                                <td class="text-end fw-semibold">@ViewBag.TotalSections</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-calendar-date text-info me-2"></i> Current Date:</td>
                                <td class="text-end fw-semibold">@DateTime.Now.ToString("MMMM dd, yyyy")</td>
                            </tr>
                            <tr>
                                <td><i class="bi bi-clock text-warning me-2"></i> Current Time:</td>
                                <td class="text-end fw-semibold">@DateTime.Now.ToString("hh:mm tt")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    </div>

@section Scripts {
    <script>
        // Add any dashboard-specific JavaScript here
        console.log('Admin Dashboard Loaded');
    </script>
}
